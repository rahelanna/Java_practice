

public class Main {

	public static void main(String[] args) {
		
		// method = a block of code that is executed whenever it is called upon
		String name = "Pufi";
		int age = 21;
		hello(name, age);
	}
	
	static void hello(String name,int age ) {
		System.out.println("Hello " +name +". " +"You are "+age + " years old.");
	}
	
}

